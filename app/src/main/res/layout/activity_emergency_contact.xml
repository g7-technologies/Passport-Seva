<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Activities.Emergency_contact">

    <ScrollView
        android:layout_above="@+id/btn_L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@color/colorOrange"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emergency"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"/>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorLabel"
                    android:layout_height="wrap_content"
                    android:text="Name and Address "
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"/>
            </LinearLayout>
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/s6_ed1"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shape"
                android:layout_height="wrap_content"
                android:hint="Enter name,address only"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"

                    android:textColor="@color/colorLabel"    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"/>
            </LinearLayout>

            <EditText
                android:maxLines="1"                    android:layout_margin="5dp"
                android:background="@drawable/edittext_shape"
                android:id="@+id/s6_ed2"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Address"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"

                    android:textColor="@color/colorLabel"   android:layout_height="wrap_content"
                    android:text="Mobile Number "
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"/>
            </LinearLayout>

            <EditText
                android:inputType="number"
                android:digits="0123456789"
                android:maxLines="1"
                android:maxLength="10"                    android:layout_margin="5dp"
                android:id="@+id/s6_ed3"
                android:padding="10dp"
                android:background="@drawable/edittext_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="10 Digits number only"/>
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:textColor="@color/colorLabel"    android:layout_height="wrap_content"
                android:text="LandLine Number"
                android:textSize="20sp"
                />
            <EditText
                android:inputType="number"
                android:digits="0123456789"                    android:layout_margin="5dp"
                android:background="@drawable/edittext_shape"
                android:maxLines="1"
                android:maxLength="10"
                android:id="@+id/s6_ed4"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:background="@color/colorOrange"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Self Declaration  "
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"/>

            </android.support.v7.widget.CardView>
            <TextView
                android:visibility="gone"
                android:id="@+id/s6_error_checkbox"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option required"
                android:textColor="@color/colorRed"
                android:textSize="15sp"/>
            <CheckBox
                android:id="@+id/s6_r1"
                android:layout_width="match_parent"

                android:textColor="@color/colorLabel"    android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="I agree" />
            <TextView
                android:layout_width="match_parent"

                android:textColor="@color/colorLabel"  android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/agreement"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"/>
            </LinearLayout>

            <EditText
                android:maxLines="1"
                android:id="@+id/s6_ed5"
                android:padding="10dp"
                android:background="@drawable/edittext_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g. New Delhi"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date (MM/DD/YYYY)"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"/>
            </LinearLayout>

            <EditText
                android:maxLines="1"
                android:id="@+id/s6_ed6"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shape"
                android:layout_height="wrap_content"
                android:editable="false"
                android:clickable="true"
                android:hint="Enter name,address only"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note:"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:text="@string/note"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/btn_L"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:layout_margin="2dp"
            android:id="@+id/back6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="@string/back"
            android:layout_weight="1"
            android:background="@drawable/custom_button"/>
        <Button
            android:layout_margin="2dp"
            android:id="@+id/next6"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Summary  >>"
            android:background="@drawable/custom_button"/>
    </LinearLayout>
</RelativeLayout>