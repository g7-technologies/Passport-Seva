<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Family_details"
    android:padding="10dp">
    <ScrollView
        android:layout_above="@+id/btn_L"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@color/colorOrange"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Family Details (Father/Mother/Husband/Wife/Legal Guardian details)"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"/>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Father Full Name "
                    android:textColor="@color/colorLabel"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"/>
            </LinearLayout>
            <EditText
                android:maxLines="1"
                android:id="@+id/s3_ed1"                    android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/edittext_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name + Last Name"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"

                    android:textColor="@color/colorLabel" android:layout_height="wrap_content"
                    android:text="Mother Full Name "
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"/>
            </LinearLayout>

            <EditText
                android:maxLines="1"
                android:id="@+id/s3_ed2"
                android:padding="10dp"                    android:layout_margin="5dp"
                android:background="@drawable/edittext_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name + Last Name"/>
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"

                android:textColor="@color/colorLabel" android:layout_height="wrap_content"
                android:text="Legal Guardian's Name(if applicable)"
                android:textSize="20sp"
                />
            <EditText
                android:maxLines="1"
                android:id="@+id/s3_ed3"
                android:padding="10dp"
                android:background="@drawable/edittext_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"                    android:layout_margin="5dp"
                android:hint="First Name + Last Name"/>















            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/wifename">

                <TextView
                    android:layout_width="wrap_content"
    android:id="@+id/txtwife"
                    android:textColor="@color/colorLabel" android:layout_height="wrap_content"
                    android:text="Wife Name"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"/>
            </LinearLayout>

            <EditText
                android:maxLines="1"
                android:id="@+id/edtwife"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/edittext_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint="Name"/>



















            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:background="@color/colorOrange"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Birth Place Address Details"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"/>

            </android.support.v7.widget.CardView>
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                />
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"

                android:textColor="@color/colorLabel" android:layout_height="wrap_content"
                android:text="Place of Birth "
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/colorRed"/>
        </LinearLayout>
            <EditText
                android:maxLines="1"
                android:id="@+id/s3_ed4"
                android:padding="10dp"
                android:background="@drawable/edittext_shape"                    android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Please fill Place of Birth Address"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/btn_L"
        android:weightSum="2"
        android:orientation="horizontal">
            <Button
                android:id="@+id/back3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:layout_margin="2dp"
                android:text="@string/back"
                android:background="@drawable/custom_button"/>
            <Button
                android:id="@+id/next3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="2dp"
                android:text="Next  >>"
                android:background="@drawable/custom_button"/>
    </LinearLayout>
</RelativeLayout>